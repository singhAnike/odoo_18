<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Announcement Views -->
    <record id="view_dashboard_announcement_tree" model="ir.ui.view">
        <field name="name">dashboard.announcement.tree</field>
        <field name="model">dashboard.announcement</field>
        <field name="arch" type="xml">
            <list string="Announcements">
                <field name="sequence" widget="handle"/>
                <field name="image" widget="image" options="{'size': [50, 50]}" optional="show"/>
                <field name="name"/>
                <field name="announcement_type" widget="badge" decoration-info="announcement_type == 'announcement'" decoration-success="announcement_type == 'event'" decoration-warning="announcement_type == 'news'" decoration-primary="announcement_type == 'sports'" decoration-danger="announcement_type == 'holiday'"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_dashboard_announcement_form" model="ir.ui.view">
        <field name="name">dashboard.announcement.form</field>
        <field name="model">dashboard.announcement</field>
        <field name="arch" type="xml">
            <form string="Announcement">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. Annual Sports Day"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="announcement_type"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="image" widget="image" options="{'size': [500, 281]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Notice Views -->
    <record id="view_dashboard_notice_tree" model="ir.ui.view">
        <field name="name">dashboard.notice.tree</field>
        <field name="model">dashboard.notice</field>
        <field name="arch" type="xml">
            <list string="Notices" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_dashboard_announcement" model="ir.actions.act_window">
        <field name="name">Announcements</field>
        <field name="res_model">dashboard.announcement</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_dashboard_notice" model="ir.actions.act_window">
        <field name="name">Notices</field>
        <field name="res_model">dashboard.notice</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_dashboard_manager_root" name="Dashboard Manager" sequence="10" web_icon="openeducat_dashboard_manager,static/description/icon.png"/>
    <menuitem id="menu_dashboard_announcement" name="Announcements" parent="menu_dashboard_manager_root" action="action_dashboard_announcement" sequence="10"/>
    <menuitem id="menu_dashboard_notice" name="Notices" parent="menu_dashboard_manager_root" action="action_dashboard_notice" sequence="20"/>
</odoo>
