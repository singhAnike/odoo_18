<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_parent_app">
        <field name="name">Parent App</field>
        <field name="description">Parent Portal Application</field>
        <field name="sequence">999</field>
    </record>

    <record id="group_parent_app_user" model="res.groups">
        <field name="name">Parent App User</field>
        <field name="category_id" ref="module_category_parent_app"/>
        <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
    </record>

    <!-- Hide all other apps from parent users by removing access -->
    <!-- This will be done via groups restriction on main menu items -->
    
    <!-- Restrict access to Settings app -->
    <record id="base.menu_administration" model="ir.ui.menu">
        <field name="groups_id" eval="[(3, ref('group_parent_app_user'))]"/>
    </record>
    
    <!-- Restrict access to Apps menu -->
    <record id="base.menu_management" model="ir.ui.menu">
        <field name="groups_id" eval="[(3, ref('group_parent_app_user'))]"/>
    </record>

    <!-- Data access rules for parent users -->
    <record model="ir.rule" id="parent_app_student_rule">
        <field name="name">Parent App Student Access</field>
        <field name="model_id" ref="openeducat_core.model_op_student"/>
        <field name="groups" eval="[(4, ref('group_parent_app_user'))]"/>
        <field name="domain_force">[('user_id', 'in', user.child_ids.ids)]</field>
    </record>

    <record model="ir.rule" id="parent_app_parent_rule">
        <field name="name">Parent App Parent Access</field>
        <field name="model_id" ref="openeducat_parent.model_op_parent"/>
        <field name="groups" eval="[(4, ref('group_parent_app_user'))]"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
    </record>

</odoo>
