<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="sh_push_noti_config_form" model="ir.ui.view">
        <field name="name">sh.push.noti.config.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="after">
                <div id="web_push_notification">
                    <h2>Firebase Push Notifications</h2>
                    <div class="row mt16 o_settings_container">
                    <div id="firebase_setting"
                         class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_web_push_notification"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_web_push_notification"/>
                        </div>
                    </div>
                    <div id="firebase_other_setting"
                         class="col-xs-12 col-md-12 o_setting_box"
                         invisible="enable_web_push_notification == False">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_project_id_firebase"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_project_id_firebase"
                                   required="enable_web_push_notification==True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_private_key_ref"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_private_key_ref"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_private_key"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_private_key"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_client_email"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_client_email"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_client_id_firebase"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_client_id_firebase"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_client_cert_url"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_client_cert_url"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_api_key"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_api_key"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_auth_domain"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_auth_domain"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_storage_bucket"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_storage_bucket"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_messaging_sender_id_firebase"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_messaging_sender_id_firebase"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_app_id_firebase"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_app_id_firebase"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_measurement_id_firebase"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_measurement_id_firebase"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                          <div class="o_setting_right_pane">
                            <label for="sh_vapid"
                                   class="col-2 col-lg-2 o_light_label"/>
                            <field name="sh_vapid"
                                   required="enable_web_push_notification == True"
                                   password="1"/>
                        </div>
                        <div class="col-lg-6 col-8 d-flex flex-row-reverse o_setting_box">
                            <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                        </div>
                    </div>
                </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_users_form_simple_inherit_modif" model="ir.ui.view">
        <field name="name">res.users.preferences.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif" />
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Backmate Theme Configuration" name="backmate_theme_configuration">
                    <group>
                        <group>
                            <!--todo later-->
                            <field name="sh_enable_night_mode" readonly="0"/>
                            <field name="sh_enable_language_selection" readonly="0"/>
                            <field name="sh_enable_gloabl_search_mode" readonly="0"/>
                            <field name="sh_enable_quick_menu_mode" readonly="0"/>
                            <field name="sh_disable_auto_edit_model" readonly="0"/>
                            <field name="sh_enable_expand_collapse" readonly="0"/>
                            <field name="sh_enable_recent_record_view" readonly="0"/>
                        </group>
                        <group>
                            <field name="sh_enable_multi_tab"  readonly="0"/>
                            <field name="sh_enable_calculator_mode" readonly="0"/>
                            <field name="sh_enable_todo_mode" readonly="0"/>
                            <!--todo later-->
                            <field name="show_attachment_in_list_view" readonly="0" invisible="0"/>
                            <field name="sh_enable_open_record_in_new_tab" readonly="0"/>
                            <field name="quick_create_view" readonly="0"/>
                            <field name="sh_enable_zoom"  readonly="0"/>
                            <div role="alert" class="alert alert-danger" invisible="sh_enable_zoom == False">
                                <strong> Sticky view </strong> feature can not work smoothly when zoom in/out views.
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>