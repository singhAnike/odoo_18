<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-name="sh_entmate_theme.CalculatorTemplate">
    <div class="sh_calc_util sh_menu_systray" t-on-click="this.showCalculator">
      <t t-if="state.enable_calc">
        <span class="open_calc float-right fa fa-calculator" style="font-size: 16px !important;" />
      </t>

    </div>

    <t t-if="state.enable_calc and state.show_calc">
      <div class="sh_calc_results ml-auto mr-auto">
        <div class="calculator" align="center">
          <div class="row displayBox">
            <!-- <p class="displayText" id="display">0</p> -->
            <input class="displayText" id="display" t-model="state.input_expression" t-att-autofocus="true" t-on-keypress="this.onKeypress" placeholder="0"/>
          </div>
          <div class="row numberPad">
            <div class="col-md-12 p-0">
              <div class="row">
                <button class="btn clear hvr-back-pulse" id="clear" t-on-click="this.cancelButton">C</button>
                <button class="btn btn-calc hvr-radial-out" id="sqrt" t-on-click="this.rootButton">√</button>
                <button class="btn btn-calc hvr-radial-out hvr-radial-out" id="square" t-on-click="this.squareButton">x<sup>2</sup>
                </button>
                <button id="divide" class="btn btn-operation hvr-fade" t-on-click="this.divisionButton">÷</button>
              </div>
              <div class="row">
                <button class="btn btn-calc hvr-radial-out" id="seven" t-on-click="this.sevenButton">7</button>
                <button class="btn btn-calc hvr-radial-out" id="eight" t-on-click="this.eightButton">8</button>
                <button class="btn btn-calc hvr-radial-out" id="nine" t-on-click="this.nineButton">9</button>
                <button id="multiply" class="btn btn-operation hvr-fade" t-on-click="this.multiplyButton">×</button>
              </div>
              <div class="row">
                <button class="btn btn-calc hvr-radial-out" id="four" t-on-click="this.fourButton">4</button>
                <button class="btn btn-calc hvr-radial-out" id="five" t-on-click="this.fiveButton">5</button>
                <button class="btn btn-calc hvr-radial-out" id="six" t-on-click="this.sixButton">6</button>
                <button id="subtract" class="btn btn-operation hvr-fade" t-on-click="this.minusButton">−</button>
              </div>
              <div class="row">
                <button class="btn btn-calc hvr-radial-out" id="one_96666" t-on-click="this.oneButton">1</button>
                <button class="btn btn-calc hvr-radial-out" id="two" t-on-click="this.twoButton">2</button>
                <button class="btn btn-calc hvr-radial-out" id="three" t-on-click="this.threeButton">3</button>
                <button id="add" class="btn btn-operation hvr-fade" t-on-click="this.plusButton">+</button>
              </div>
              <div class="row">
                <button class="btn btn-calc hvr-radial-out" id="plus_minus" t-on-click="this.plusMinusButton">&#177;</button>
                <button class="btn btn-calc hvr-radial-out" id="zero" t-on-click="this.zeroButton">0</button>
                <button class="btn btn-calc hvr-radial-out" id="decimal" t-on-click="this.decimalButton">.</button>
                <button id="equals" class="btn btn-operation equals hvr-back-pulse" t-on-click="this.answerButton">=</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </t>
  </t>


</templates>
