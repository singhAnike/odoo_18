<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard View -->
    <record id="view_bus_tracking_dashboard" model="ir.ui.view">
        <field name="name">openeducat_bus_tracking.dashboard</field>
        <field name="model">openeducat_bus_tracking.gps_log</field>
        <field name="arch" type="xml">
            <form string="Bus Tracking Dashboard" js_class="bus_tracking_dashboard">
                <header>
                    <div class="o_control_panel">
                        <div class="o_cp_left">
                            <div class="o_form_buttons_view">
                                <button name="action_refresh_dashboard" type="object" class="btn btn-primary" icon="fa-refresh">
                                    <span>Refresh</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </header>
                <sheet>
                    <div class="o_dashboard_container">
                        <!-- Vehicle Selector -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="alert alert-info" role="alert">
                                    <h4 class="alert-heading">Bus Tracking Analytics</h4>
                                    <p>Select a vehicle to view its analytics data.</p>
                                </div>
                                <div class="form-group">
                                    <label for="vehicle_id">Select Vehicle:</label>
                                    <field name="vehicle_id" id="vehicle_id" widget="many2one" 
                                           options="{'no_create': True, 'no_quick_create': True}"/>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Graphs Row -->
                        <div class="row">
                            <!-- Engine Hours Graph -->
                            <div class="col-12 col-lg-6 mb-4">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">Engine Hours</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="o_graph_svg_container">
                                            <div class="o_graph_svg" id="engine_hours_graph">
                                                <div class="o_graph_renderer">
                                                    <div class="text-center py-5">
                                                        <i class="fa fa-spinner fa-spin fa-3x"></i>
                                                        <p class="mt-2">Loading engine hours data...</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Distance Traveled Graph -->
                            <div class="col-12 col-lg-6 mb-4">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">Distance Traveled</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="o_graph_svg_container">
                                            <div class="o_graph_svg" id="distance_graph">
                                                <div class="o_graph_renderer">
                                                    <div class="text-center py-5">
                                                        <i class="fa fa-spinner fa-spin fa-3x"></i>
                                                        <p class="mt-2">Loading distance data...</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Recent Logs -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0">Recent GPS Logs</h5>
                                        <div class="o_reload_icon" title="Refresh" role="button">
                                            <i class="fa fa-refresh"/>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div id="recent_logs_container">
                                            <div class="text-center py-5">
                                                <i class="fa fa-spinner fa-spin fa-3x"></i>
                                                <p class="mt-2">Loading recent logs...</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Dashboard Client Action -->
    <record id="action_bus_tracking_dashboard" model="ir.actions.client">
        <field name="name">Bus Tracking Dashboard</field>
        <field name="tag">openeducat_bus_tracking.dashboard</field>
        <field name="res_model">openeducat_bus_tracking.gps_log</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data available. Start tracking your vehicles to see analytics.
            </p>
        </field>
    </record>
    
    <!-- Add dashboard to menu -->
    <menuitem id="menu_bus_tracking_dashboard"
              name="Dashboard"
              parent="openeducat_bus_tracking.menu_bus_tracking_root"
              action="openeducat_bus_tracking.action_bus_tracking_dashboard"
              sequence="30"/>
</odoo>
